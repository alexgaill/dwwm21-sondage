{% extends 'base.html.twig' %}

{% block body %}
	<h1 class="my-3 text-center">Liste des Reponses</h1>

	<div class="row">
		<div class="col-9">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Reponse</th>
						<th>Question</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for reponse in reponses %}
						<tr>
							<th>{{reponse.id}}</th>
							<th>{{reponse.title}}</th>
							<th>{{reponse.question.title}}</th>
							<th>
								<a href="{{ path('app_update_reponse', {id:reponse.id}) }}">
									<button class="btn btn-secondary">Modifier</button>
								</a>
							</th>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Pas de r√©ponses pour le moment</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-3">
			{{form(form)}}
			</div>
		</div>
	{% endblock %}
