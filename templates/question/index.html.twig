{% extends 'base.html.twig' %}

{% block body %}
	<h1 class="my-3 text-center">Liste des questions</h1>

	<div class="row">
		<div class="col-9">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Question</th>
						<th>Sondage</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for question in questions %}
						<tr>
							<th>{{question.id}}</th>
							<th>{{question.title}}</th>
							<th>{{question.sondage.title}}</th>
							<th>
								<a href="{{ path('app_update_question', {id:question.id}) }}">
									<button class="btn btn-secondary">Modifier</button>
								</a>
							</th>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Pas de questions pour le moment</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-3">
			{{form(form)}}
			</div>
		</div>
	{% endblock %}
